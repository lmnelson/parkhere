<%= form_for(@listing) do |f| %>
  <%= render 'shared/error_messages', object: @listing %> 
	<%= f.label :city %>
	<%= f.text_field :city, value: "Vancouver", readonly:"readonly", class:"input-block-level"%>

	<label for="listing_street">Street Address</label>
	<%= f.text_field :street , placeholder: "",class:"input-block-level" %>

	<label for="listing_price">Price <small>/monthly</small></label>
	<div class="input-prepend">
		<span class="add-on">$</span>
		<%= f.text_field :price, id:"appendedPrependedInput" %>
		<!-- <span class="add-on">/monthly</span> -->
	</div>

<!-- 	<%= f.label :description %>
	<%= f.text_area :description, rows:8, class:"input-block-level" %> -->

	<p><%= f.submit "Add Listing", class: "btn btn-block btn-primary" %></p>
<% end %>