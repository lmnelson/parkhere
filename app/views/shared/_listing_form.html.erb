<%= form_for(@listing) do |f| %>
  <%= render 'shared/error_messages', object: @listing %> 
	<%= f.label :city %>
	<%= f.text_field :city, value: "Vancouver", readonly:"readonly"%>

	<label for="listing_street">Street Address</label>
	<%= f.text_field :street , placeholder: "" %>

	<label for="listing_price">Price</label>
	<div class="input-prepend input-append">
		<span class="add-on">$</span>
		<%= f.text_field :price, id:"appendedPrependedInput", class:"span4" %>
		<span class="add-on">/monthly</span>
	</div>

	<%= f.label :description %>
	<%= f.text_area :description, rows:8 %>

	<p><%= f.submit "Add Listing", class: "btn btn-primary" %></p>
<% end %>