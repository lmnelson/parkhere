<div class="span12">
	<div class="form">
		<h3>Login</h3>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  
		  <%= f.text_field :username, :autofocus => true, class:"input-block-level", placeholder:"Username" %>

		  <%= f.password_field :password, class:"input-block-level", placeholder: "Password" %>

<!-- 		  <% if devise_mapping.rememberable? -%>
		    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
		  <% end -%> -->

		  <div><%= f.submit "Login", class:"btn btn-block btn-success" %></div>
		<% end %>
	</div>

	<div class="form">
		<%= render "devise/shared/links" %>
	</div>
</div>